{
  "name": "controle-gastos",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run db:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "dev": "npm run db:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "db:up": "docker compose -f infra/compose.yaml up -d",
    "db:stop": "docker compose -f infra/compose.yaml stop",
    "db:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "npx eslint .",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "rodrigoons",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "next": "15.3.3",
    "node-pg-migrate": "8.0.2",
    "pg": "8.16.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.28.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "detect-secrets": "1.0.6",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "28.13.5",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "jest": "30.0.0",
    "prettier": "3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
